<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskstodo">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/to_do"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true"/>

        <activity android:name=".MainActivity" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditListItem" android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".AddTask" android:theme="@style/AppTheme.NoActionBar">
           </activity>
        <activity android:name=".DisplayListItem" android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>